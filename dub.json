{
    "name": "dcv",
    "description": "Computer vision library for D programming language.",
    "copyright": "Copyright Â© 2016, Relja Ljubobratovic",
    "authors": ["Relja Ljubobratovic"],
    "license": "BSL-1.0",

    "dependencies": {
        ":core": "*",
        ":io": "*",
        ":plot": "*"
    },

    "buildTypes": {
        "unittest-release": {
            "buildOptions": ["unittests", "releaseMode", "optimize", "inline"]
        }
    },

    "subPackages":
    [
        {
            "name": "core",
            "description": "Core package of DCV. Contains computer vision algorithms.",
            "sourcePaths": [
                "source/dcv/core",
                "source/dcv/features",
                "source/dcv/imgproc",
                "source/dcv/multiview",
                "source/dcv/tracking"
            ],
            "dependencies":
            {
                "mir": "~>0.17.0-alpha9"
            }
        },
        {
            "name": "io",
            "description": "Image and Video I/O package.",
            "sourcePaths": [
                "source/dcv/io"
            ],
            "dependencies":{
                "dcv:core": ">=0.0.0",
                "imageformats": "~>6.1.0",
                "ffmpeg-d": "~>2.5.1"
            }
        },
        {
            "name": "plot",
            "description": "Visualization package.",
            "sourcePaths": [
                "source/dcv/plot"
            ],
            "dependencies":{
                "dcv:core": ">=0.0.0",
                "ggplotd": "~>0.9.4"
            },
            "libs": ["gl", "glfw"]
        }
    ]
}
